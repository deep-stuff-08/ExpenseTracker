<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/recheck_dateview"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/recheck_dateview"
        android:textColor="@color/lossRed"
        android:layout_margin="20sp"
        android:layout_marginTop="0sp"
        android:text="Note: This will read all the messages including messages that mey have been found earlier."
        />

</RelativeLayout>